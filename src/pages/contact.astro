---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact">
    <main>
        <div class="flex justify-center">
            <h2 class="text-2xl font-bold">Formulario de Contacto</h2>
            <div class="grid justify-center items-center">
                <form class="w-[400px] p-6 mb-3">
                    <div
                        class="p-2 mb-3 bg-white border-2 rounded-full hover:border-blue-600"
                    >
                        <label for="email" class="px-2"
                            >Correo electr√≥nico</label
                        >
                        <input
                            id="email"
                            type="email"
                            placeholder="correo@ejemplo.com"
                            class="outline-none w-full px-2"
                        />
                    </div>

                    <div
                        class="p-2 mb-5 bg-white border-2 rounded-full hover:border-blue-600"
                    >
                        <label for="nombre" class="px-2">Nombre</label>
                        <input
                            id="nombre"
                            type="text"
                            placeholder="Tu nombre"
                            class="outline-none w-full px-2"
                        />
                    </div>

                    <div
                        class="p-2 mb-3 bg-white border-2 rounded-full hover:border-blue-600"
                    >
                        <label for="asunto" class="px-2">Asunto</label>
                        <input
                            id="asunto"
                            type="text"
                            placeholder="Asunto del mensaje"
                            class="outline-none w-full px-2"
                        />
                    </div>

                    <div
                        class="p-2 mb-3 bg-white border-2 rounded hover:border-blue-600"
                    >
                        <label for="mensaje" class="px-2">Mensaje</label>
                        <textarea
                            id="mensaje"
                            rows="4"
                            placeholder="Tu mensaje"
                            class="outline-none w-full px-2"></textarea>
                    </div>

                    <button
                        type="submit"
                        class="w-full bg-blue-600 text-white py-2 rounded-full hover:bg-blue-700"
                    >
                        Enviar mensaje
                    </button>
                </form>
            </div>
        </div>
    </main>
</Layout>
